<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.dsproject.SignUpScreen">

    <TextView
        android:text="Enter Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="26sp"
        android:id="@+id/su_tv1" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/su_tv1"
        android:layout_marginTop="10dp"
        android:id="@+id/su_sv"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">
        <TableLayout
            android:id="@+id/scroll_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TableRow>
                <TextView
                    android:text="Name"
                    android:textSize="20sp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="Enter full name!!"
                    android:id="@+id/su_name"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="DOB"
                    android:textSize="20sp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="DD/MM/YYYY"
                    android:id="@+id/su_dob"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Username"
                    android:textSize="20sp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="Enter username"
                    android:id="@+id/su_uname"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Password"
                    android:textSize="20sp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="Enter Password"
                    android:id="@+id/su_pass"
                    android:inputType="textPassword" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Confirm Password"
                    android:textSize="20sp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="Enter Password"
                    android:id="@+id/su_confpass"
                    android:inputType="textPassword"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Contact Number"
                    android:textSize="20sp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="Enter 10 digit phone no"
                    android:id="@+id/su_contact"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Address Line1"
                    android:textSize="20sp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="Enter Address"
                    android:id="@+id/su_addr1"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Address Line2"
                    android:textSize="20sp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="Enter Address"
                    android:id="@+id/su_addr2"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Address Line3"
                    android:textSize="20sp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="Enter Address"
                    android:id="@+id/su_addr3"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
    <Button
        android:id="@+id/su_b1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/su_sv"
        android:text="Register"/>
</RelativeLayout>
